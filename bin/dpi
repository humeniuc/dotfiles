#!/bin/bash

_dump()
{
    dpi=$( xrdb -get Xft.dpi)

    message=(
        "Curent: ${dpi}"
        "SeteazÄƒ un dpi (96/120/144/192)"
    )

    if [ -t "0" ]; then
        printf "%s\n" "${message[@]}" 1>&2
    elif command -v zenity > /dev/null 2>&1; then
        zenity --info --text="$( printf "%s\n" "${message[@]}" )"
        dunstify "${message[*]}"
    else
        dunstify "$( printf "%s\n" "${message[@]}" )"
    fi

    exit
}

[ -z "$1" ] && _dump

xrdb -global -merge <( echo "Xft.dpi: $1" )
xrandr --dpi "$1"
command -v wine &>/dev/null && {
    wine reg add "HKCU\Control Panel\Desktop" /v LogPixels /t REG_DWORD /d "$1" /f >/dev/null
}

echo "Schimbat la:"
xrdb -query | grep Xft.dpi
